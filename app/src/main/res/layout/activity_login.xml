<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a2"
    android:orientation="vertical"
    android:padding="8dp">

    <!--    <ImageView-->
    <!--        android:layout_width="200dp"-->
    <!--        android:layout_height="200"-->
    <!--        android:layout_marginLeft="10dp"-->
    <!--        android:src="@drawable/logofpt" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Quản Lý Thư Viện"
        android:textAllCaps="true"
        android:textColor="#FFF6CE55"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Tên đăng nhập"
        android:textAllCaps="true"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_bg"
        android:hint="Tên đăng nhập"
        android:paddingLeft="16dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="mật khẩu"
        android:textAllCaps="true"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtPassWord"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_bg"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:textColor="@color/white" />

    <CheckBox
        android:id="@+id/remember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Lưu thông tin tài khoản"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:textColor="@color/white"
        android:weightSum="2">

        <Button
            android:id="@+id/btnlogin_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/backgroud_btn"
            android:text="Đăng nhập"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btncancel_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgroud_btn"
            android:text="Thoát"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvdangkytk_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Đăng Ký Tài Khoản"
        android:textColor="@color/white"
        android:textSize="18dp" />
</LinearLayout>